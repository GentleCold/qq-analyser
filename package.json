{
  "name": "qq-analyser",
  "version": "0.0.2",
  "description": "Analyser for qq group",
  "main": "dist/main.js",
  "scripts": {
    "init": "npm install & bower install",
    "build": "electron-builder build",
    "start": "less-watch-compiler --run-once src/web/less src/web/css & eslint ./*.js & electron . "
  },
  "keywords": [],
  "author": "GentleCold",
  "license": "AGPL-3.0",
  "devDependencies": {
    "echarts-wordcloud": "^2.1.0",
    "electron": "^22.0.0",
    "electron-builder": "^23.6.0",
    "eslint": "^8.29.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.6.0",
    "eslint-plugin-promise": "^6.1.1",
    "less": "^4.1.3",
    "less-watch-compiler": "^1.16.3",
    "log4js": "^6.7.1"
  },
  "dependencies": {
    "@node-rs/jieba": "^1.6.1",
    "sqlite3": "^5.1.2",
    "ws": "^8.11.0"
  },
  "build": {
    "productName": "qq-analyser",
    "appId": "com.GentleCold.app",
    "copyright": "GentleCold",
    "directories": {
      "output": "build"
    },
    "files": [
      "dist/**"
    ],
    "extraResources": {
      "from": "./extra",
      "to": "../utils"
    },
    "win": {
      "icon": "./dist/icon/app.ico",
      "target": [
        {
          "target": "nsis"
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "./dist/icon/app.ico",
      "uninstallerIcon": "",
      "installerHeaderIcon": "",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": false,
      "shortcutName": "qq-analyser"
    }
  }
}
